.show{
  width: 100%;
 
}
.show image{
  display: block;
  width: 750rpx;
 
}

.banners{
  padding: 60rpx 0;
  background-color: #1C356E;
}

.banners:nth-child(2n-1){
  background-color: #fff;
}

.tits{
  width: 490rpx;
  height: 70rpx;
  background-color: #DE2E05;
  border-radius: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 40rpx;
  margin: 0 auto;
  position: relative;
  margin-bottom: 30rpx;

}

.tits::before{
  display: block;
  content: "";
  width: 100%;
  height: 100%;
  border: 2px dotted #DE2E05;
  border-radius: 70rpx;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  transform: scale(1.03,1.2);
}


.text{
  padding: 40rpx 30rpx 0;
  box-sizing: border-box;
 display: flex;
flex-wrap: wrap;
}

.text view{
  width: 50%;
  font-size: 30rpx;
  color: black;
  line-height: 1.8em;
  position: relative;
  padding-left: 18rpx;
  box-sizing: border-box;
}



.text view::before{
  display: block;
  border-radius:50% ;
  content: "";
  width: 10rpx;
  height: 10rpx;
  background-color: black;
position: absolute;
left: 0;
top: 50%;
margin-top: -5rpx;

}

.banners:nth-child(2n) .text view{
  color: #fff;
}

.banners:nth-child(2n) .text view::before{
  background-color: #fff;
}


.one{
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.one .item{
  text-align: center;
padding: 20rpx ;
}

.one image{
  width: 180rpx;
  height: 180rpx;
  
}


.one .item view{
  text-transform: uppercase;
  font-size: 28rpx;
  padding-top: 5rpx;
}

