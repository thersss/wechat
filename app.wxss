.major {
  white-space: nowrap;
  padding: 30rpx 0;
}



.pubtitle {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  margin-bottom: 40rpx;

}

.pubtitle .txts {
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 20rpx;
  align-items: center;
}

.pubtitle .txts::before {
  display: block;
  width: 8rpx;
  height: 34rpx;
  background-color: #c8080b;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -17rpx;
}

.pubtitle .more {
  font-size: 34rpx;
  color: #666;
}

.works {
  padding: 90rpx 26rpx 70rpx;
}

.main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.main .boxs {
  width: 344rpx;
  height: 214rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.main .pic {
  width: 100%;
  height: 100%;
}


.main .ceng {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}

.main .ceng .tit {
  font-size: 34rpx;
}

.main .ceng .eng {
  opacity: 0.6;
  text-transform: uppercase;
  font-size: 24rpx;
  letter-spacing: 5rpx;
}

.main .ceng .line {
  height: 2rpx;
  width: 50rpx;
  background-color: #fff;
  margin: 10rpx 0 20rpx
}

.contain {
  padding: 0 26rpx;
}

.dynamic {
  padding: 90rpx 0 70rpx;
}


.ditiem {
  display: flex;
  padding: 15rpx 0;
  border: 1rpx dashed #eee;
  justify-content: space-between;
}


.ditiem .pic {
  width: 230rpx;
  height: 150rpx;

}

.ditiem image {
  width: 100%;
  height: 100%;
}

.ditiem .txts {
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.ditiem title {
  font-size: 34rpx;
}

.ditiem .info {
  font-size: 26rpx;
  color: #888;
}

.ditiem .info text {
  font-size: 22rpx;
}